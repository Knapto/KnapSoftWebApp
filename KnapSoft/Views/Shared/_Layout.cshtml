@* _Layout.cshtml - stylizovaný layout s Bootstrapem a brandem *@
<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KnapSoftware</title>
    <meta name="description" content="Webové aplikace, které přinášejí výsledky." />
    <meta name="author" content="KnapSoftware" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }

        .logo {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1F2937;
        }

            .logo span {
                color: #3B82F6;
                font-weight: 400;
            }

        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand logo" asp-controller="Home" asp-action="Index">Knap<span>Software</span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Solutions" asp-action="Index">Řešení</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="BlogPosts" asp-action="Index">Blog</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="ProKoho">Pro Koho?</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Jak">Jak?</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Kontakt">Kontakt</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <!-- CHAT BUTTON -->
    <button id="chatButton" class="btn btn-primary position-fixed bottom-3 end-3 rounded-circle shadow-lg"
            style="width:60px; height:60px; z-index:1050;">
        💬
    </button>

    <!-- CHAT WINDOW -->
    <div id="chatBox" class="position-fixed bottom-5 end-3 bg-white shadow-lg border rounded"
         style="width: 360px; height: 460px; display: none; z-index:1051;">
        <div class="d-flex justify-content-between align-items-center border-bottom p-2">
            <strong>KnapBot</strong>
            <button id="closeChat" class="btn btn-sm btn-light">✖</button>
        </div>
        <div id="chatMessages" class="p-2 overflow-auto" style="height: 330px; font-size: 0.9rem;"></div>
        <div class="p-2 border-top">
            <div class="input-group">
                <input type="text" id="userInput" class="form-control" placeholder="Zeptejte se…" />
                <button class="btn btn-primary" id="sendMessage">▶</button>
            </div>
        </div>
    </div>

    <main class="container py-5">
        @RenderBody()
    </main>

    <footer class="bg-light text-center text-muted py-4 mt-auto border-top">
        <section class="py-5 bg-light fade-up fade-delay-3">
            <div class="container">
                <h2 class="mb-3">Kontakt</h2>
                <p class="text-muted mb-1">📧 E-mail: <a href="mailto:info@knapsoft.cz">tomasknap@studioknap.cz</a></p>
                <p class="text-muted">📞 Telefon: <a href="tel:+420123456789">+420 792 518 250</a></p>
            </div>
        </section>
        <div class="container">
            &copy; 2025 – KnapSoftware. Webové aplikace na míru.
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>