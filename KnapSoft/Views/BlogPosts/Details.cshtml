@model KnapSoft.Models.BlogPost

<article class="blog-article container-fluid py-5">
    <div class="blog-inner mx-auto">
        <h1 class="blog-title mb-3">@Model.Title</h1>
        <p class="blog-date text-light opacity-75 small">Publikováno: @Model.CreatedAt.ToString("d. MMMM yyyy")</p>

        @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
        {
            <img src="@Model.CoverImageUrl" class="blog-image img-fluid rounded shadow-sm mb-4" alt="@Model.Title" />
        }

        <div class="blog-content">
            @Html.Raw(Model.Content)
        </div>

        @if (User.IsInRole("Admin"))
        {
            <div class="mt-4 d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-sm">Upravit</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger btn-sm">Smazat</a>
            </div>
        }
    </div>
</article>
