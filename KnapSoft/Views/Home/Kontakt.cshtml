@{
    ViewData["Title"] = "Kontakt";
}

<section class="text-center py-5 fade-up fade-delay-1">
    <div class="container">
        <h1 class="display-5 fw-bold text-white text-shadow">Spojte se s námi</h1>
        <p class="lead mt-3 text-muted text-white-50">
            Máte dotaz, nápad nebo zájem o spolupráci? Ozvěte se – rádi si s vámi popovídáme.
        </p>
    </div>
</section>

<section class="py-5 fade-up fade-delay-2">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="tile tile-solution tile-3d p-4" style="transform: translateY(-6px); box-shadow: 0 12px 24px rgba(0, 0, 0, 0.7), inset 0 1px 0 rgba(255, 255, 255, 0.03), inset 0 -1px 0 rgba(0, 0, 0, 0.5); background: #292929;">
                    <form method="post" asp-action="Kontakt">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="Name" class="form-label">Vaše jméno</label>
                                <input type="text" class="form-control bg-secondary text-white border-0" id="Name" name="Name" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="Email" class="form-label">Váš e-mail</label>
                                <input type="email" class="form-control bg-secondary text-white border-0" id="Email" name="Email" required>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="Message" class="form-label">Zpráva</label>
                            <textarea class="form-control bg-secondary text-white border-0" id="Message" name="Message" rows="5" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-outline-light w-100">✉️ Odeslat zprávu</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5 fade-up fade-delay-3">
    <div class="container text-center">
        <h2 class="mb-3 text-white text-shadow">Další možnosti kontaktu</h2>
        <p class="text-muted text-white-50 mb-1">📧 E-mail: <a href="mailto:tomasknap@studioknap.cz" class="link-light">tomasknap@studioknap.cz</a></p>
        <p class="text-muted text-white-50">📞 Telefon: <a href="tel:+420792518250" class="link-light">+420 792 518 250</a></p>
    </div>
</section>