@{
    ViewData["Title"] = "Kontakt";
}

<section class="text-center py-5 fade-up fade-delay-1">
    <div class="container">
        <h1 class="display-5 fw-bold">Spojte se s námi</h1>
        <p class="lead mt-3 text-muted">
            Máte dotaz, nápad nebo zájem o spolupráci? Ozvěte se – rádi si s vámi popovídáme.
        </p>
    </div>
</section>

<section class="py-5 fade-up fade-delay-2">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post" asp-action="Contact">
                    <div class="mb-3">
                        <label for="Name" class="form-label">Vaše jméno</label>
                        <input type="text" class="form-control" id="Name" name="Name" required>
                    </div>
                    <div class="mb-3">
                        <label for="Email" class="form-label">Váš e-mail</label>
                        <input type="email" class="form-control" id="Email" name="Email" required>
                    </div>
                    <div class="mb-3">
                        <label for="Message" class="form-label">Zpráva</label>
                        <textarea class="form-control" id="Message" name="Message" rows="5" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg">Odeslat</button>
                </form>
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-light fade-up fade-delay-3">
    <div class="container text-center">
        <h2 class="mb-3">Další možnosti kontaktu</h2>
        <p class="text-muted mb-1">📧 E-mail: <a href="mailto:info@knapsoft.cz">tomasknap@studioknap.cz</a></p>
        <p class="text-muted">📞 Telefon: <a href="tel:+420123456789">+420 792 518 250</a></p>
    </div>
</section>