<!-- INDEX.CSHTML -->
@{
    ViewData["Title"] = "Control Panel";
}

<!-- ANIMATED LOGO LOADER -->
<div id="loader" class="knap-loader">
    <h1 id="animated-logo">
        <span class="knap"></span><span class="soft"></span>
    </h1>
</div>
<!--Fixni logo-->
<div id="animated-logo-container" class="logo-final-position d-none mt-5">
    <h1 id="animated-logo-fixed">
        <span class="knap">Knap</span><span class="soft">Software</span>
    </h1>
</div>

<!-- CONTENT THAT LOADS AFTER -->
<div id="dashboard-content" class="d-none">
    <h1 class="dashboard-title">
        Vítejte v systému
        @if (User?.Identity?.IsAuthenticated ?? false)
        {
            <text>, @User.Identity.Name</text>
        }
    </h1>
    <div class="dashboard-grid">
        @* <a class="tile-link" href="@Url.Action("Index", "Home")">
            <div class="tile"><div class="tile-inner">🏠 Hlavní stránka</div></div>
        </a> *@
        <a class="tile-link" href="@Url.Action("Index", "BlogPosts")">
            <div class="tile"><div class="tile-inner">Blog</div></div>
        </a>
        <a class="tile-link" href="@Url.Action("Proc", "Home")">
            <div class="tile"><div class="tile-inner">Proč?</div></div>
        </a>
        <a class="tile-link" href="@Url.Action("Jak", "Home")">
            <div class="tile"><div class="tile-inner">Jak?</div></div>
        </a>
        <a class="tile-link" href="@Url.Action("Kontakt", "Home")">
            <div class="tile"><div class="tile-inner">Kontakt</div></div>
        </a>
        <a class="tile-link" href="@Url.Action("Index", "Solutions")">
            <div class="tile"><div class="tile-inner">Řešení</div></div>
        </a>
        <a class="tile-link" href="@Url.Action("ProZivnostniky", "Home")">
            <div class="tile"><div class="tile-inner">Pro živnostníky</div></div>
        </a>
        <a class="tile-link" href="@Url.Action("Restaurace", "Home")">
            <div class="tile"><div class="tile-inner">Restaurace / Bistra</div></div>
        </a>
        <a class="tile-link" href="@Url.Action("MaleFirmy", "Home")">
            <div class="tile"><div class="tile-inner">Malé firmy</div></div>
        </a>
        <a class="tile-link" href="@Url.Action("NaseMise", "Home")">
            <div class="tile"><div class="tile-inner">Naše Mise</div></div>
        </a>
        @* Zobrazit jen pokud je uživatel přihlášen *@
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <a class="tile-link" href="/Identity/Account/Manage/Index">
                <div class="tile"><div class="tile-inner">👤 Nastavení profilu</div></div>
            </a>
        }
    </div>
</div>
