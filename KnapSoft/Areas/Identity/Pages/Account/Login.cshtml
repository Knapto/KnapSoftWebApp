@page
@model LoginModel

@{
    ViewData["Title"] = "Přihlášení";
}
<!-- LOGIN PAGE STYLED -->
<div id="dashboard-content">
    <h1 class="dashboard-title">🔐 Přihlášení do systému</h1>
    <div class="row justify-content-center px-3">
        <div class="col-lg-12 mb-5">
            <div class="tile tile-info">
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control bg-dark text-white border-secondary" placeholder="name@example.com" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="text-dark small">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control bg-dark text-white border-secondary" placeholder="••••••" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="text-dark small">Heslo</label>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label text-light" asp-for="Input.RememberMe">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mb-3">Přihlásit se</button>

                    <div class="text-center small">
                        <a class="text-info d-block mb-1" asp-page="./ForgotPassword">Zapomenuté heslo?</a>
                        <a class="text-info d-block" asp-page="./ResendEmailConfirmation">Znovu odeslat potvrzení e-mailu</a>
                    </div>
                </form>
            </div>
        </div>

