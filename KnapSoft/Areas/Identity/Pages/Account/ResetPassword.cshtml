@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Obnovení hesla";
}

<h1 class="dashboard-title">@ViewData["Title"]</h1>
<h2 class="text-muted text-center mb-4">Zadejte nový přístup k účtu</h2>

<div class="container d-flex justify-content-center">
    <div class="tile-info" style="max-width: 500px; width: 100%;">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
            <input asp-for="Input.Code" type="hidden" />

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control bg-dark text-white border-secondary" autocomplete="username" placeholder="Email" />
                <label asp-for="Input.Email" class="form-label text-white-50">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control bg-dark text-white border-secondary" autocomplete="new-password" placeholder="Nové heslo" />
                <label asp-for="Input.Password" class="form-label text-white-50">Nové heslo</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Input.ConfirmPassword" class="form-control bg-dark text-white border-secondary" autocomplete="new-password" placeholder="Potvrďte heslo" />
                <label asp-for="Input.ConfirmPassword" class="form-label text-white-50">Potvrďte heslo</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="w-100 btn btn-warning fw-bold shadow">Obnovit heslo</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
